<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="TpFinal">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.doranco.jpaexam.entity.Hotel</class>
        <class>com.doranco.jpaexam.entity.Employee</class>
        <class>com.doranco.jpaexam.entity.Bedroom</class>
        <class>com.doranco.jpaexam.entity.Booking</class>
        <class>com.doranco.jpaexam.entity.Client</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1/jpa_exam" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="root" />
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />
        </properties>
    </persistence-unit>
</persistence>
